<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.AuditViewController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <center>
        <VBox alignment="TOP_CENTER" spacing="15.0">

            <VBox alignment="CENTER" spacing="10">
                <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Audit Tool: Dokumenten-Organisation" />

                <VBox alignment="CENTER" spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Audit-Logik: Feste Input-Pfade in Service-Ebene hinterlegt" />
                    <Label style="-fx-font-size: 11px; -fx-text-fill: gray;" text="Pfad Verträge: X:\...\Vertragsliste.xlsx" />
                    <Label style="-fx-font-size: 11px; -fx-text-fill: gray;" text="Pfad Schaden: X:\...\Schadenliste.xlsx" />
                </VBox>

                <Separator prefWidth="200.0" />

                <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10 0;">

                    <VBox alignment="CENTER" spacing="5">
                        <Button fx:id="startVertragButton" onAction="#startVertragAudit" prefHeight="41.0" prefWidth="130.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #03a9f4; -fx-text-fill: white;" text="Verträge-Audit" />
                        <Label style="-fx-font-size: 10px; -fx-text-fill: gray;" text="Liest Vertragsliste" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="5">
                        <Button fx:id="startSchadenButton" onAction="#startSchadenAudit" prefHeight="41.0" prefWidth="130.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #ff9800; -fx-text-fill: white;" text="Schaden-Audit" />
                        <Label style="-fx-font-size: 10px; -fx-text-fill: gray;" text="Liest Schadenliste" />
                    </VBox>

                    <VBox alignment="CENTER" spacing="5">
                        <Button fx:id="startBeideButton" onAction="#startBeideAudit" prefHeight="41.0" prefWidth="130.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="BEIDE Audits" />
                        <Label style="-fx-font-size: 10px; -fx-text-fill: gray;" text="Startet beide Prozesse nacheinander" />
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" spacing="50" style="-fx-padding: 10 0;">
                    <Button fx:id="stopButton" onAction="#stopAuditProcess" prefHeight="46.0" prefWidth="111.0" style="-fx-font-size: 16px; -fx-background-color: #F44336; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 50; -fx-border-radius: 50;" text="⏹ Stop" />
                </HBox>
            </VBox>

            <VBox alignment="CENTER" prefHeight="84.0" prefWidth="657.0" spacing="10" VBox.vgrow="ALWAYS">
                <ProgressBar fx:id="progressBar" prefWidth="300" visible="false" />
                <Label fx:id="statusLabel" style="-fx-font-style: italic;" text="Bereit zum Start" />
                <ListView fx:id="stepsListView" prefHeight="119.0" prefWidth="657.0" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </ListView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
