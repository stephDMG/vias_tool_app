<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="tableContainer" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">


    <!-- Search Section - wird dynamisch ein/ausgeblendet -->
    <HBox fx:id="searchSection" alignment="CENTER_LEFT" managed="false" prefHeight="0.0" prefWidth="0.0" spacing="10" visible="false">
        <Label text="Suchen:" />
        <TextField fx:id="searchField" promptText="Suchbegriff eingeben..." HBox.hgrow="ALWAYS" />
        <Label fx:id="resultsCountLabel" />
    </HBox>

    <!-- Main Table -->
    <TableView fx:id="tableView" editable="true" prefHeight="596.0" prefWidth="1955.0" styleClass="data-table">
        <columnResizePolicy>
            <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </TableView>

    <!-- Actions Section - wird dynamisch konfiguriert -->
    <HBox fx:id="actionsSection" alignment="CENTER_RIGHT" managed="false" spacing="10" visible="false">
        <Label fx:id="actionsLabel" text="Ausgewählte Spalten löschen:" />
        <Button fx:id="deleteColumnsButton" styleClass="button-danger" text="Löschen" />
        <Button fx:id="cleanColumnsButton" text="Bereinigen" />
    </HBox>

    <!-- Pagination Section - wird dynamisch ein/ausgeblendet -->
    <Pagination fx:id="pagination" managed="false" maxPageIndicatorCount="10" pageCount="0" visible="false" />

    <!-- Export Section - wird dynamisch konfiguriert -->
    <HBox fx:id="exportSection" alignment="CENTER_RIGHT" managed="false" spacing="10" visible="false">
        <Label fx:id="exportLabel" text="Vollständigen Bericht exportieren als:" />
        <Button fx:id="exportCsvButton" disable="true" text="CSV" />
        <Button fx:id="exportXlsxButton" disable="true" text="XLSX" />
    </HBox>

</VBox>
