<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="treeTableContainer"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="10"
      style="-fx-font-family: 'Segoe UI', Arial, sans-serif; -fx-font-size: 12px;">

    <!-- ===== Search / Header Section (toggleable) ===== -->
    <HBox fx:id="searchSection"
          alignment="CENTER_LEFT"
          spacing="10"
          managed="false" visible="false">
        <padding>
            <Insets top="6" right="10" bottom="0" left="10"/>
        </padding>

        <Label text="Suchen:"/>
        <TextField fx:id="searchField"
                   promptText="Suchbegriff eingeben..."
                   HBox.hgrow="ALWAYS"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Label fx:id="resultsCountLabel" style="-fx-opacity: 0.85;"/>

        <Separator orientation="VERTICAL"/>
        <Button fx:id="expandAllButton"
                text="Alle aufklappen"
                tooltip="Alle Gruppen öffnen"
                style="-fx-background-radius: 6; -fx-padding: 4 10;"/>
        <Button fx:id="collapseAllButton"
                text="Alle zuklappen"
                tooltip="Alle Gruppen schließen"
                style="-fx-background-radius: 6; -fx-padding: 4 10;"/>
    </HBox>

    <!-- ===== Main TreeTable ===== -->
    <TreeTableView fx:id="treeTableView"
                   showRoot="false"
                   fixedCellSize="24.0"
                   editable="true"
                   VBox.vgrow="ALWAYS"
                   style="-fx-background-radius: 8; -fx-border-color: rgba(0,0,0,0.08); -fx-border-radius: 8;">
        <columnResizePolicy>
            <TreeTableView fx:constant="UNCONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <placeholder>
            <Label text="Keine Daten geladen."/>
        </placeholder>
    </TreeTableView>

    <!-- ===== Pagination (toggleable) ===== -->
    <Pagination fx:id="pagination"
                managed="false" visible="false"
                maxPageIndicatorCount="10" pageCount="0"/>

    <!-- ===== Export Section (toggleable) ===== -->
    <HBox fx:id="exportSection"
          alignment="CENTER_RIGHT"
          spacing="10"
          managed="false" visible="false">
        <padding>
            <Insets top="0" right="10" bottom="10" left="10"/>
        </padding>
        <Label fx:id="exportLabel" text="Vollständigen Bericht exportieren als:"/>
        <Button fx:id="exportCsvButton" text="CSV" disable="true"/>
        <Button fx:id="exportXlsxButton" text="XLSX" disable="true"/>
    </HBox>

</VBox>
