<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.OpListTableViewController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- TOP: Filter / Sprache / Format -->
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="OP-Listen Export" />

            <HBox alignment="CENTER" spacing="20">
                <Label text="Filter:" />
                <ComboBox fx:id="filterComboBox" prefWidth="150" />

                <Label text="Sprache:" />
                <RadioButton fx:id="deRadioButton" text="DE" />
                <RadioButton fx:id="enRadioButton" text="EN" />

                <Label text="Format:" />
                <RadioButton fx:id="excelRadioButton" text="Excel" />
                <RadioButton fx:id="pdfRadioButton" text="PDF" />
            </HBox>
        </VBox>
    </top>

    <!-- CENTER: Buttons + Progress -->
    <center>
        <VBox alignment="CENTER" prefHeight="327.0" prefWidth="654.0" spacing="10.0">
            <HBox alignment="BOTTOM_CENTER" prefHeight="44.0" prefWidth="657.0">
                <Label alignment="BOTTOM_CENTER" prefHeight="0.0" prefWidth="654.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Prozess"  />

            </HBox>

            <!-- Button-Reihe -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="startButton" onAction="#startExportProcess" prefHeight="41.0" prefWidth="108.0" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-border-radius: 50; -fx-background-radius: 50;" text="▶ starten" />
                <Button fx:id="stopButton" disable="true" onAction="#stopExportProcess" prefHeight="41.0" prefWidth="108.0" style="-fx-font-size: 16px; -fx-background-color: #F44336; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 50; -fx-border-radius: 50;" text="⏹ Stop" />
            </HBox>

            <!-- Statusbereich -->
            <VBox alignment="CENTER" prefHeight="195.0" prefWidth="657.0" spacing="10">
                <ProgressBar fx:id="progressBar" prefWidth="300" visible="false" />

                <Label fx:id="statusLabel" style="-fx-font-style: italic;" text="Bereit zum Start" />
                <ListView fx:id="stepsListView" prefHeight="172.0" prefWidth="657.0" />
            </VBox>
        </VBox>
    </center>

    <!-- BOTTOM: OP-Liste ansehen -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="showTableButton" disable="true" onAction="#showOpListTable" style="-fx-font-size: 14px; -fx-background-color: #2196F3; -fx-text-fill: white;" text="OP-Liste anschauen" />
        </HBox>
    </bottom>

</BorderPane>
