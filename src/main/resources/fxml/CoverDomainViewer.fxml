                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Label style="-fx-font-weight: bold;" text="Gruppierung" />
                                        <CheckBox fx:id="groupByAllCheck" text="Alles" />
                                    </HBox>
                                    <ListView fx:id="groupByList" fixedCellSize="22" minHeight="140" prefHeight="200" style="-fx-background-radius: 8; -fx-border-color: rgba(0,0,0,0.1); -fx-border-radius: 8;" VBox.vgrow="ALWAYS" />
                                    <Label fx:id="groupBySelectedLabel" maxWidth="260" style="-fx-font-style: italic; -fx-text-fill: gray;" text="AusgewÃ¤hlt: Standard (all)" wrapText="true" />
                                </VBox>

                                <!-- Date filters -->
                                <HBox fx:id="dateBox" alignment="TOP_LEFT" managed="false" spacing="16" visible="false">
                                    <VBox spacing="6">
                                        <Label style="-fx-font-weight: bold;" text="Ab-Datum" />
                                        <DatePicker fx:id="abDatePicker" />
                                    </VBox>
                                    <VBox spacing="6">
                                        <Label style="-fx-font-weight: bold;" text="Bis-Datum" />
