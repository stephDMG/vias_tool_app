                    <VBox fx:id="treeHost" managed="false" visible="false" VBox.vgrow="ALWAYS"/>
                </StackPane>
            </VBox>


        </VBox>
    </center>

    <!-- ====== FOOTER ====== -->
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="8" left="12" right="12" top="8" />
            </padding>
            <Button onAction="#closeWindow" style="-fx-background-radius: 8; -fx-padding: 6 12;" text="SchlieÃŸen" />
