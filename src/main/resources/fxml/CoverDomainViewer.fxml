                                </VBox>

                            </HBox>
                        </content>
                    </TitledPane>

                    <!-- Messages + Table -->
                    <VBox spacing="8" VBox.vgrow="ALWAYS">
                        <Label fx:id="messageLabel" style="-fx-text-fill: gray;" />
                        <VBox fx:id="resultsContainer" VBox.vgrow="ALWAYS" />
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- ====== FOOTER ====== -->
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="8" left="12" right="12" top="8" />
            </padding>
            <Button onAction="#closeWindow" style="-fx-background-radius: 8; -fx-padding: 6 12;" text="SchlieÃŸen" />
        </HBox>
    </bottom>
</BorderPane>
