<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.MainController">
    <top>
        <VBox>
            <HBox alignment="CENTER" style="-fx-background-color: #263240;">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <ImageView fitHeight="80.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@/images/banner.png"/>
                </ImageView>
            </HBox>

            <MenuBar>
                <Menu mnemonicParsing="false" text="Datei">
                    <Menu mnemonicParsing="false" text="Daten importieren">
                        <MenuItem mnemonicParsing="false" onAction="#showExtractionView" text="Aus PDF extrahieren"/>
                        <MenuItem mnemonicParsing="false" onAction="#showDataView" text="Datei anzeigen (CSV/XLSX)"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Daten exportieren">
                        <MenuItem mnemonicParsing="false" onAction="#showDbExportView" text="Aus Datenbank exportieren"/>
                    </Menu>
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" onAction="#closeApplication" text="SchlieÃŸen"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Datenverarbeitung">
                    <MenuItem mnemonicParsing="false" onAction="#showPivotView" text="Pivot-Tabelle erstellen"/>
                    <MenuItem mnemonicParsing="false" onAction="#showEnrichmentView" text="Daten anreichern"/>
                    <MenuItem mnemonicParsing="false" onAction="#showOpListView" text="OP-Listen Export"/>
                </Menu>
            </MenuBar>

            <ToolBar>
                <Button onAction="#showDashboardView" text="Dashboard" styleClass="toolbar-button" />
                <Button onAction="#showAiAssistantView" text="KI-Assistent" styleClass="toolbar-button-special" />
            </ToolBar>

        </VBox>
    </top>
</BorderPane>