<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="mainBorderPane" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.MainController">
    <top>
        <VBox>
            <HBox alignment="CENTER" styleClass="banner-header">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <!--
                <ImageView fitWidth="300" preserveRatio="true" cache="true">
                    <Image url="@/images/img.png"/>
                </ImageView>
                -->

                <AnchorPane prefHeight="35.0">
                    <ImageView cache="true" fitHeight="105.0" fitWidth="1423.0" layoutX="-220.0" layoutY="-14.0" preserveRatio="true" AnchorPane.bottomAnchor="-16.387552897135414" AnchorPane.leftAnchor="-220.0" AnchorPane.rightAnchor="-21.666666666666742" AnchorPane.topAnchor="-14.0">
                        <Image url="@/images/img.png" />
                  <effect>
                     <Bloom />
                  </effect>
                    </ImageView>
                </AnchorPane>

            </HBox>

            <MenuBar>
                <Menu text="Datei">
                    <Menu mnemonicParsing="false" text="Daten importieren">
                        <MenuItem mnemonicParsing="false" onAction="#showExtractionView" styleClass="menu-item" text="Aus PDF extrahieren" />
                        <MenuItem mnemonicParsing="false" onAction="#showDataView" text="Datei anzeigen (CSV/XLSX)" />
                    </Menu>
                    <Menu mnemonicParsing="false" text="Daten exportieren">
                        <MenuItem mnemonicParsing="false" onAction="#showDbExportView" text="Aus Datenbank exportieren" />
                    </Menu>
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" onAction="#closeApplication" styleClass="menu-item" text="Schließen" />
                </Menu>
                <Menu mnemonicParsing="false" text="Datenverarbeitung">
                    <MenuItem mnemonicParsing="false" onAction="#showPivotView" styleClass="menu-item" text="Pivot-Tabelle erstellen" />
                    <MenuItem mnemonicParsing="false" onAction="#showEnrichmentView" styleClass="menu-item" text="Daten anreichern" />
                    <MenuItem fx:id="statusItem" mnemonicParsing="false" onAction="#showOpListView" styleClass="menu-item" text="OP-Listen Export" visible="false" />
                </Menu>
            <effect>
               <InnerShadow>
                  <color>
                     <Color red="0.14901961386203766" green="0.19607843458652496" blue="0.250980406999588" />
                  </color></InnerShadow>
            </effect>
            </MenuBar>

            <ToolBar>
                <Button defaultButton="true" onAction="#showDashboardView" styleClass="toolbar-button-home" textOverrun="CENTER_WORD_ELLIPSIS">
                    <graphic>
                        <HBox alignment="CENTER" spacing="4.0">
                            <Label style="-fx-font-size: 14px;" text="🏠" />
                            <Label text="Dashboard" />
                        </HBox>
                    </graphic>
                </Button>
                <Button onAction="#showAiAssistantView" styleClass="toolbar-button-special" text="KI-Assistent" />
                <TextFlow fx:id="userGreeting" prefHeight="28.0" prefWidth="184.0" styleClass="lg" textAlignment="CENTER">
               <effect>
                  <Bloom threshold="0.71" />
               </effect></TextFlow>

                <!-- Spacer to push settings button to the right -->
                <Region prefHeight="28.0" prefWidth="677.0" HBox.hgrow="ALWAYS" />

                <!-- Settings Button with Icon - positioned at the far right -->
                <Button onAction="#showSettingsView" styleClass="settings-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5.0">
                            <!-- Settings Icon (gear/cog) -->
                            <Label style="-fx-font-size: 14px;" text="⚙" />
                            <Label text="Einstellungen" />
                        </HBox>
                    </graphic>
                </Button>
            </ToolBar>
        </VBox>
    </top>
</BorderPane>
