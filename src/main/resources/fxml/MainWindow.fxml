<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainBorderPane" prefHeight="800.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/17.0.12" fx:controller="gui.controller.MainController">
    <top>
        <VBox>
            <HBox alignment="CENTER" styleClass="banner-header">
                <padding>
                    <Insets/>
                </padding>

                <StackPane prefHeight="120.0" maxHeight="120.0" minHeight="120.0">

                    <clip>
                        <Rectangle width="${mainBorderPane.width}" height="120.0" />
                    </clip>

                    <ImageView preserveRatio="true" fitWidth="${mainBorderPane.width}">

                        <Image url="@/images/merry_christmas_banner.png"/>
                    </ImageView>
                </StackPane>
            </HBox>

            <MenuBar>
                <Menu text="Datei">
                    <Menu mnemonicParsing="false" text="Daten importieren">
                        <MenuItem mnemonicParsing="false" onAction="#showExtractionView" styleClass="menu-item"
                                  text="Aus PDF extrahieren"/>
                        <MenuItem mnemonicParsing="false" onAction="#showDataView" text="Datei anzeigen (CSV/XLSX)"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Daten exportieren">
                        <MenuItem mnemonicParsing="false" onAction="#showDbExportView"
                                  text="Aus Datenbank exportieren"/>
                    </Menu>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" onAction="#closeApplication" styleClass="menu-item"
                              text="SchlieÃŸen"/>
                </Menu>
                <Menu mnemonicParsing="false" text="Datenverarbeitung">
                    <MenuItem mnemonicParsing="false" onAction="#showPivotView" styleClass="menu-item"
                              text="Pivot-Tabelle erstellen"/>
                    <MenuItem mnemonicParsing="false" onAction="#showEnrichmentView" styleClass="menu-item"
                              text="Daten anreichern"/>
                    <MenuItem fx:id="statusItem" mnemonicParsing="false" onAction="#showOpListView"
                              styleClass="menu-item" text="OP-Listen Export"/>
                    <MenuItem mnemonicParsing="false" onAction="#showAuditView"
                              styleClass="menu-item" text="Audit-Tool"/>
                </Menu>

                <Menu text="VertrÃ¤ge">
                    <MenuItem fx:id="coverDashboardItem"
                              mnemonicParsing="false"
                              onAction="#showCoverDashboardView"
                              text="COVER Dashboard"/>
                </Menu>
                <effect>
                    <InnerShadow>
                        <color>
                            <Color red="0.14901961386203766" green="0.19607843458652496" blue="0.250980406999588"/>
                        </color>
                    </InnerShadow>
                </effect>
            </MenuBar>

            <ToolBar>
                <Button defaultButton="true" onAction="#showDashboardView" styleClass="toolbar-button-home"
                        textOverrun="CENTER_WORD_ELLIPSIS">
                    <graphic>
                        <HBox alignment="CENTER" spacing="4.0">
                            <Label style="-fx-font-size: 14px;" text="ðŸ "/>
                            <Label text="Dashboard"/>
                        </HBox>
                    </graphic>
                </Button>
                <Button onAction="#showAiAssistantView" styleClass="toolbar-button-special" text="KI-Assistent"/>
                <TextFlow fx:id="userGreeting" prefHeight="28.0" prefWidth="184.0" styleClass="lg"
                          textAlignment="CENTER">
                    <effect>
                        <Bloom threshold="0.71"/>
                    </effect>
                </TextFlow>

                <!-- Spacer to push settings button to the right -->
                <Region prefHeight="28.0" prefWidth="677.0" HBox.hgrow="ALWAYS"/>

                <!-- Settings Button with Icon - positioned at the far right -->
                <Button onAction="#showSettingsView" styleClass="settings-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5.0">
                            <!-- Settings Icon (gear/cog) -->
                            <Label style="-fx-font-size: 14px;" text="âš™"/>
                            <Label text="Einstellungen"/>
                        </HBox>
                    </graphic>
                </Button>
            </ToolBar>
        </VBox>
    </top>
</BorderPane>
