    <GridPane alignment="TOP_CENTER" hgap="20.0" translateY="50.0" vgap="20.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <gui.components.StatCardControl fx:id="activeContractsCard" />
            <gui.components.StatCardControl fx:id="openDamagesCard" GridPane.columnIndex="1" />
            <gui.components.StatCardControl fx:id="brokerCountCard" GridPane.columnIndex="2" />
        </children>
    </GridPane>
    <VBox layoutY="500.0" prefHeight="81.0" prefWidth="575.0" translateY="100.0">
        <Label fx:id="statusLabel"  prefHeight="80.0" prefWidth="578.0" text="Daten werden geladen..." textAlignment="CENTER">
          <font>
              <Font size="14.0" />
          </font>
        </Label>
    </VBox>
</VBox>
