    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <VBox alignment="TOP_CENTER" prefHeight="98.0" prefWidth="814.0">
        <Label alignment="CENTER" maxWidth="Infinity" prefHeight="30.0" prefWidth="825.0" style="-fx-font-size: 25px; -fx-font-weight: bold;" text="CS Dashboard" />
    </VBox>
    <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refreshDashboard" prefHeight="29.0" prefWidth="145.0" styleClass="aktualisieren-button" stylesheets="@../css/styles-atlantafx.css" text="Aktualisieren ðŸ”„" textAlignment="CENTER">
