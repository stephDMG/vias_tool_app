<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1"
            fx:controller="gui.controller.DbExportViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <top>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <!-- Header und Parameter-Bereich bleibt unverändert -->
            <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 20px; -fx-font-weight: bold;"
                   text="Datenbank-Export"/>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label minWidth="120.0" text="Bericht auswählen:"/>
                <ComboBox fx:id="reportComboBox" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
                <Button fx:id="helpButton" mnemonicParsing="false" onAction="#showHelp"
                        style="-fx-border-color: #2e6da4;" styleClass="help-button" stylesheets="@../css/bootstrap3.css"
                        text="?"/>
            </HBox>

            <!-- Parameter-Listen-Ansicht (für spezielle Queries) -->
            <VBox fx:id="parameterListBox" managed="false" spacing="5.0" visible="false">
                <Label text="Parameter (eine oder mehrere Schaden Nrn.):"/>
                <HBox spacing="10.0">
                    <TextField fx:id="parameterInputTextField" prefWidth="200.0" promptText="Einzelne Nr. eingeben"
                               HBox.hgrow="SOMETIMES"/>
                    <Button onAction="#handleAddParameter" text="Hinzufügen"/>
                    <Button onAction="#handleRemoveParameter" styleClass="button-danger" text="Entfernen"/>
                </HBox>
                <ListView fx:id="parameterListView" prefHeight="100.0"/>
            </VBox>

            <!-- Parameter-Grid-Ansicht (für Standard-Queries) -->
            <GridPane fx:id="parameterGrid" hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="120.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
            </GridPane>

            <!-- Ausführungs-Bereich -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Button fx:id="executeQueryButton" mnemonicParsing="false" onAction="#executeQuery" text="Daten laden"/>
                <ProgressBar fx:id="progressBar" prefWidth="200.0" visible="false"/>
                <Label fx:id="statusLabel" text="Warte auf Auswahl..."/>
            </HBox>
        </VBox>
    </top>

    <!-- Zentraler Bereich: Nur Container für die dynamische Tabelle -->
    <center>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="20.0"/>
            </BorderPane.margin>

            <!-- Header für den Ergebnis-Bereich -->
            <Label text="Ergebnis-Vorschau" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

            <!-- CONTAINER für die dynamische Tabelle vom EnhancedTableManager -->
            <VBox fx:id="resultsContainer" spacing="10" VBox.vgrow="ALWAYS">
                <!-- Hier wird die UniversalTableView.fxml dynamisch eingefügt -->
            </VBox>
        </VBox>
    </center>
</BorderPane>